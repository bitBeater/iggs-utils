{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "command":["npx prettier --write --config ./.prettier.json .; npm version patch -f; npx typedoc --options typedoc.json; tsc && git commit -a -m'${input:comment}'; git push; npm publish"],
        "label": "publish",        
      }
    ],
    "inputs": [
        {
          "id": "comment",
          "type": "promptString",
          "description": "comment"
        }
      ]
  }